@model LusiadasSolucaoWeb.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="theme-color" content="#4169E1"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Lusíadas - Solução Web | Log in</title>

    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo.jpg" />

    <!-- Bootstrap 3.3.4 -->
    <link href="/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="/Content/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />

    <link href="/Content/css/cssLDF.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="~/Content/plugins/jQuery/jquery-3.3.1.min.js"></script>


    <style>

        .noselect {
            -webkit-touch-callout: none; /* iOS Safari */
            -webkit-user-select: none; /* Safari */
            -khtml-user-select: none; /* Konqueror HTML */
            -moz-user-select: none; /* Firefox */
            -ms-user-select: none; /* Internet Explorer/Edge */
            user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome and Opera */
        }

        .pull-right {
            float: right !important;
        }

    </style>

</head>

<body class="login-page noselect">
    <div class="login-box" style="max-width:400px">
        <div class="login-logo">
            <b>Lusíadas Saúde</b>
            <br>
            <small>Solução WEB</small>
        </div>
        <div class="login-box-body" >
            <p class="login-box-msg">Login para iniciar a sessão</p>
            <form action="@Url.Action("Index", "Home")" method="post">
                <div class="form-group has-feedback">
                    @*<input type="email" class="form-control" placeholder="Email" />*@
                    @Html.TextBoxFor(u => u.UserName, new { placeholder = "Utilizador", @class = "form-control", @type = "text" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @*<input type="password" class="form-control" placeholder="Password" />*@
                    @Html.PasswordFor(u => u.Password, new { placeholder = "Palavra-passe", @class = "form-control" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <select required id="dropdown-unidade" name="LocalConnection" class="form-control">
                        <option value="" disabled selected hidden>Unidade Hospitalar para consultar</option>
                        @{
                            try
                            {


                                if ((bool)Session["Lisboa"])
                                {
                                    Session["Lisboa"] = "- On ✅";
                                    Session["LisboaStatus"] = "";
                                }
                                else
                                {

                                    Session["Lisboa"] = "- Off ❌";
                                    Session["LisboaStatus"] = "disabled";
                                }


                                if ((bool)Session["Porto"])
                                {
                                    Session["Porto"] = "- On ✅";
                                    Session["PortoStatus"] = "";

                                }
                                else
                                {

                                    Session["Porto"] = "- Off ❌";
                                    Session["PortoStatus"] = "disabled";

                                }


                                if ((bool)Session["Algarve"])
                                {
                                    Session["Algarve"] = "- On ✅";
                                    Session["AlgarveStatus"] = "";
                                }
                                else
                                {

                                    Session["Algarve"] = "- Off ❌";
                                    Session["AlgarveStatus"] = "disabled";

                                }

                            }
                            catch (Exception err)
                            {

                            }

                        }

                        <option value="HLU" @Session["LisboaStatus"]>Lisboa @Session["Lisboa"]</option>
                        <option value="HPT" @Session["PortoStatus"]>Porto @Session["Porto"]</option>
                        <option value="HSUL" @Session["AlgarveStatus"]>Algarve @Session["Algarve"]</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                    </div>
                    <div class="col-xs-4 pull-right ">
                        <button type="submit" id="clickEnter" class="btn btn-primary btn-block btn-flat">Entrar</button>
                    </div>
                </div>
                <div calss="row">
                    <div>
                        @Html.ValidationMessage("error", new { @class = "fa fa-warning" })
                    </div>
                </div>
            </form>
        </div>
        <div class="row" style="margin-top:10px;">
            <div class="col-md-6 vertical" style="max-width:200px;float:left;">
                <h5>© 2018 Lusíadas Saúde</h5>
            </div>
            <div class="col-md-6 " style="max-width:200px;float:right;">
                <button class="bg-light-red btn btn-circle btn-sm btn-success pull-right" data-toggle="modal" data-target="#model_ajuda">
                    <i class="fa fa-fw fa-question-circle"></i>Ajuda
                </button>
            </div>
            
        </div>
    </div>




    <div class="modal fade" id="model_ajuda" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Ajuda</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Para ajuda ou resolução de problemas abra um ticket no Helpdesk através
                        deste
                        <a href="#">link</a>.
                        <br>
                        <br>Problemas urgentes ligue
                        <a href="tel:10050">10050</a>(08h às 20h).
                    </p>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Fechar</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">

    

    $(document.body).keyup(function (event) {
        if (event.keyCode === 13) {
            $("#clickEnter").click();
    
        }
    });

</script>
