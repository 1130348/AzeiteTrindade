<script type="text/javascript">
    var count = 1;

    function RefreshData()
    {
       
        $.ajax({
            url: '@Url.Action("LoadTableDash", "ATP")',
            type: "get",
            data: { "pagen": count },
            cache: false,
            success: function (result) {
                LDFTableRenderBody(result, 'atpTable');
              
            },
            timeout: 10000,
            error: function (xhr, ajaxOptions, thrownError) {
                
                console.log(xhr);
            }
        });
             

    }

    $(function () {
        
        startRefresh();
    });

    function startRefresh() {

        
        //var max = "@Globals.nDoentes";
        var max = $("#numDoentes").text();
        var sem = "Sem Dados";
       
        if (sem.localeCompare(max)) {
            var max2 = max / 20;
           
            if (count < max2 + 1) {
                count++;
            }
            else {
                count = 1;
            }
        }

        setTimeout(startRefresh, 30000);
      
        var date = new Date;

        var seconds = date.getSeconds();
        var minutes = date.getMinutes();
        var hour = date.getHours();
        $("#lastupdate").empty();

        if (hour < 10) {
            hour = "0" + hour;
        }
        if (minutes<10) {
            minutes = "0" + minutes;
        }
        if (seconds < 10) {
            seconds = "0" + seconds;
        }

        $("#lastupdate").append("Última Actualização: " + hour + ":" + minutes + ":" + seconds);

        getDados();


        //$("#lastupdate") = "Última Actualização: "+hour + ":" + minutes + ":" + seconds;
        RefreshATPTable();
 
        

    }


    function getDados() {

        $.ajax({
            url: '@Url.Action("GetDados", "ATP")',
            type: "get",
            cache: false,
            success: function (result) {

                var res=result.split(';');

                var ndoentes =res[0];
                var semTriagem = res[1];
                var semNota =res[2];

                $("#numDoentes").empty();
                $("#numDoentes").append(ndoentes);

                $("#semTriagem").empty();
                $("#semTriagem").append(semTriagem);

                $("#semNota").empty();
                $("#semNota").append(semNota);
              
            },
            timeout: 10000,
            error: function (xhr, ajaxOptions, thrownError) {
                
                console.log(xhr);
            }
        });

    }


    function RefreshATPTable() {
        LDFTableResetCounter("atpTable");
        RefreshData();

    }
</script>

