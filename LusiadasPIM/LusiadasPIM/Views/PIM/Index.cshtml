@using LDFHelper.Helpers;
@using LusiadasPIM.Models;
@model Tuple<ModelPIMTable, PisosModel, ValenciaModel>


<link href="/Content/css/ldfTable.min.css" rel="stylesheet" />

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Internamento
        <small>Listagem de doentes</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Início</a></li>
        <li class="active">Internamento</li>
    </ol>
</section>


<!-- Main content -->
<section class="content">
    <form action="#" method="post">
        <div class="box box-primary box-solid">
            <div class="box-header" style="padding:6px;">
                <h3 class="box-title" style="font-size:16px;">Filtro</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row internamento-filter">
                    <div class="col-sm-4">
                        <label>Valência</label>
                        <select class="form-control" id="select-valencia">
                            <option value="">Ver todos</option>
                            <optgroup label="Minhas">
                                @foreach (Valencia item in Model.Item3.listValencias.Where(q => q.ISMINE))
                                {
                                    <option value="@item.COD_SERV">@item.DESCR_SERV</option>
                                }
                            </optgroup>
                            <optgroup label="Todas">
                                @foreach (Valencia item in Model.Item3.listValencias.Where(q => !q.ISMINE))
                                {
                                    <option value="@item.COD_SERV">@item.DESCR_SERV</option>
                                }
                            </optgroup>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label>Piso</label>
                        <select class="form-control" id="select-pisos">
                            <option value="">Ver todos</option>
                            @foreach (Piso item in Model.Item2.listPisos)
                            {
                                <option value="@item.COD_SERV">@item.DESCR_SERV</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>Médico Responsável</label>
                        @*<div class="checkbox">
                            <input type="checkbox" id="check-view-mine">
                            Ver apenas os meus pacientes
                        </div>*@

                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="check-view-mine" class="minimal" />
                                @*<input type="checkbox"  name="check-view-mine" class="minimal" checked="" style="position: absolute; opacity: 0;" />*@
                                <span style="font-weight:normal;">Ver apenas os meus pacientes</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="box box-default">
            <div class="box-body">
                <div class="row listwrapper no-border">@Html.TableRender(Model.Item1.callbacks, Model.Item1.list_headers, new LDFTableAttributes() { ID = "pimTable", className = "tableInternal", autoRefreshTime = 100000 })</div>
            </div>
        </div>
    </form>
</section>


@section customJS
{
    <script type="text/javascript">

        var valenciaCod = "";
        var pisoCod = "";
        var viewMine = 0;

        var iCheckObj = $('#check-view-mine.minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue'
        });

        iCheckObj.on('ifChanged', function (e) {
            viewMine = (($("#check-view-mine").is(":checked") == true) ? 1 : 0);
            FilterData();
        });


        $("#select-pisos").on("change", function (el) {
            pisoCod = this.value;
            FilterData();
        });

        $("#select-valencia").on("change", function (el) {
            valenciaCod = this.value;
            FilterData();
        });

        //$("#check-view-mine").on("change", function () {
        //    viewMine = (($(this).is(":checked") == true) ? 1 : 0);
        //    FilterData();
        //});

        function FilterData()
        {

            $.ajax({
                url: '@Url.Action("FilterData", "PIM")',
                data: { "valenciaCod": valenciaCod, "pisoCod": pisoCod, "viewMine": viewMine },
                type: "get",
                cache: false,
                success: function (result) {
                    LDFTableRenderBody(result, 'pimTable');
                    LDFTableRestartCounter("pimTable");
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    console.log(xhr);
                }
            });
        
        }

        function AutoRefreshTable() {
            LDFTableResetCounter("pimTable");
            FilterData();
        }


    </script>

<script src="/Scripts/ldfTable.min.js"></script>

}
