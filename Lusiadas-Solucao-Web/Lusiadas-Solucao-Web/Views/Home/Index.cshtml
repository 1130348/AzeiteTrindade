@model LusiadasSolucaoWeb.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Lusíadas - Solução Web | Log in</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.4 -->
    <link href="/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="/Content/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    
    <link href="/Content/css/cssLDF.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>Lusíadas Saúde</b>
            <br>
            <small>Solução WEB</small>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Login para iniciar a sessão</p>
            <form action="@Url.Action("Index", "Home")" method="post">
                <div class="form-group has-feedback">
                    @*<input type="email" class="form-control" placeholder="Email" />*@
                    @Html.TextBoxFor(u => u.UserName, new { placeholder = "Utilizador", @class = "form-control", @type = "text" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @*<input type="password" class="form-control" placeholder="Password" />*@
                    @Html.PasswordFor(u => u.Password, new { placeholder = "Palavra-passe", @class = "form-control" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                    </div>
                    <div class="col-xs-4 pull-right">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
                    </div><!-- /.col -->
                </div>
                <div calss="row">
                    <div>
                        @Html.ValidationMessage("error", new { @class = "fa fa-warning" })
                    </div>
                </div>
            </form>
        </div><!-- /.login-box-body -->
        <div class="row" style="margin-top:10px;" >
            <div class="col-md-6 vertical">
                <small>© 2015 Lusíadas Saúde</small>
            </div>
            <div class="col-md-6 text-right">
                <button class="bg-light-red btn btn-circle btn-sm btn-success" data-toggle="modal" data-target="#model_ajuda">
                    <i class="fa fa-fw fa-question-circle"></i>Ajuda
                </button>
            </div>
        </div>
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="/Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $("[rel=tooltip]").tooltip({ placement: 'right' });
        });
    </script>



    <!-- Help Modal -->
    <div class="modal fade" id="model_ajuda" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Ajuda</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Para ajuda ou resolução de problemas abra um ticket no Helpdesk através
                        deste
                        <a href="#">link</a>.
                        <br>
                        <br>Problemas urgentes ligue
                        <a href="tel:10050">10050</a>(08h às 20h).
                    </p>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-default" data-dismiss="modal">Fechar</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
